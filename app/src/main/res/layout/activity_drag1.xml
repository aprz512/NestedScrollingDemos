<?xml version="1.0" encoding="utf-8"?>
<com.aprz.nestedscrolldemos.drag.demo01.DragLayout1 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/gakki"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#bbbbbb"
        android:gravity="center"
        android:text="@string/pull_me"
        android:textColor="@android:color/black"
        android:textSize="40sp" />

</com.aprz.nestedscrolldemos.drag.demo01.DragLayout1>