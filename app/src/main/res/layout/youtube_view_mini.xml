<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <!-- 这个只是作为参考，没有什么用 这里的布局是完全展开的样子 -->

    <View
        android:id="@+id/video"
        android:layout_width="150dp"
        android:layout_height="56dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <TextView
        android:id="@+id/video_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/funny_cut_cat_and_dogs"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/video_uploader"
        app:layout_constraintLeft_toRightOf="@id/video"
        app:layout_constraintRight_toLeftOf="@+id/play" />

    <TextView
        android:id="@+id/video_uploader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/aprz"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/video"
        app:layout_constraintRight_toLeftOf="@+id/play" />

    <ImageView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_play_arrow_white_24dp"
        app:layout_constraintBottom_toBottomOf="@id/video"
        app:layout_constraintRight_toLeftOf="@+id/close"
        app:layout_constraintTop_toTopOf="@id/video"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_close_white_24dp"
        app:layout_constraintBottom_toBottomOf="@id/video"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/video"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>